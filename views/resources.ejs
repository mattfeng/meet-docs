<html lang="en">

<head>
  <% include ../partials/head %>
  <link rel="stylesheet" href="/css/resources.css">
</head>

<body>
  <header>
    <% include ../partials/navbar %>
  </header>

  <main>
    <div class="hero-wrapper">
      <section class="container hero">
        <h1 class="title">Resources</h1>
      </section>
    </div>

    <div class="links-wrapper">
      <div class="row">
        <div class="col s12 m12">
          <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#links">Links and Websites</a></li>
            <li class="tab col s6"><a href="#videos">Videos</a></li>
          </ul>
        </div>
      </div>

      <section id="links" class="container links">
        <% for (var category in linkResources) { %>
          <div>
            <h2><%= category %></h2>
          </div>
          <% for (var i = 0; i < linkResources[category].length; i++) { %>
            <div class="row">
              <div class="col s12 m12">
                <div class="card small horizontal">
                  <div class="card-image">
                    <img src="<%- linkResources[category][i].image %>" alt="">
                  </div>

                  <div class="card-stacked">
                    <div class="card-content">
                      <span class="card-title">
                        <%= linkResources[category][i].title %>
                      </span>
                      <span class="card-subtitle">
                        <%= linkResources[category][i].author %>
                      </span>
                      <div class="badges">
                        <% for (var j = 0; j < linkResources[category][i].tags.length; j++) { %>
                          <span class="new badge" data-badge-caption="">
                            <%= linkResources[category][i].tags[j] %>
                          </span>
                        <% } %>
                      </div> <!-- .badges -->
                      <div class="clr"></div>
                      <div class="description">
                        <p>
                          <%= linkResources[category][i].desc %>
                        </p>
                      </div>
                    </div> <!-- .card-content -->

                    <div class="card-action">
                      <a target="_blank" href="<%- linkResources[category][i].link %>">Go to resource</a>
                    </div>
                  </div> <!-- .card-stacked -->
                </div> <!-- .card -->
              </div> <!-- .col -->
            </div> <!-- .row -->
          <% } %>
        <% } %>
      </section> <!--.container #links-->

      <section id="videos" class="container links">
        <% for (var category in videoResources) { %>
          <div>
            <h2><%= category %></h2>
          </div>
          <% for (var i = 0; i < videoResources[category].length; i++) { %>
            <div class="row">
              <div class="col s12 m12">
                <div class="card small horizontal">
                  <div class="card-image">
                    <img src="<%- videoResources[category][i].image %>" alt="">
                  </div>

                  <div class="card-stacked">
                    <div class="card-content">
                      <span class="card-title">
                        <%= videoResources[category][i].title %>
                      </span>
                      <span class="card-subtitle">
                        <%= videoResources[category][i].author %>
                      </span>
                      <div class="badges">
                        <% for (var j = 0; j < videoResources[category][i].tags.length; j++) { %>
                          <span class="new badge" data-badge-caption="">
                            <%= videoResources[category][i].tags[j] %>
                          </span>
                        <% } %>
                      </div> <!-- .badges -->
                      <div class="clr"></div>
                      <div class="description">
                        <p>
                          <%= videoResources[category][i].desc %>
                        </p>
                      </div>
                    </div> <!-- .card-content -->

                    <div class="card-action">
                      <a target="_blank" href="<%- videoResources[category][i].link %>">Go to resource</a>
                    </div>
                  </div> <!-- .card-stacked -->
                </div> <!-- .card -->
              </div> <!-- .col -->
            </div> <!-- .row -->
          <% } %>
        <% } %>
      </section> <!--.container #video -->

    </div>
  </main>

  <footer>
    <% include ../partials/footer %>
  </footer>

  <script>
    $(".tabs").tabs();
  </script>
</body>

</html>